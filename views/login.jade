extends layout

block head-content
  link(rel='stylesheet', href='/stylesheets/login.css')

block content
  div.col-sm-12
    div.title
      h1= title
    .container
      form.form-signin(role='form', action='login', method='post')
        input.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
        input.form-control(type='password', name='password', placeholder='Password', required='')
        div.checkbox
          label(for='remember-me')
            input(type='checkbox', name='remember-me', id='remember-me', value='remember-me')
            |Remember me
        button.btn.btn-lg.half-span.sharp.btn-success(type='submit') Sign In
        a.btn.btn-lg.half-span.sharp.btn-success(role='button', href='register') Sign Up
